{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "outDir": "./compiled",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "files": [
    "demo/main.ts",
    "demo/polyfills.ts"
  ],
  "include": [
    "demo/**/*"
  ]
}
