{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "ngx-lightbox-with-rotate": [
        "dist/ngx-lightbox-with-rotate"
      ],
      "ngx-lightbox-with-rotate/*": [
        "dist/ngx-lightbox-with-rotate/*"
      ]
    }
  },
  "include": [
    "src/*.ts"
  ]
}